<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".view.birth.BirthActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/tv_fields"
            android:text="@string/nama_ayah"
            android:id="@+id/tv_ayah"/>
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/nama_ayah"
            android:id="@+id/edt_nama_ayah"
            android:inputType="text" />
        <TextView
            style="@style/tv_fields"
            android:text="@string/nik_ayah"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_nik_ayah" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/_317xxxxxxx"
            android:id="@+id/edt_nik_ayah"
            android:inputType="number" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/foto_ktp_ayah" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/img_ktp_ayah"
            android:src="@drawable/ic_image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_fields"
                android:id="@+id/btn_camera_ayah"
                android:text="@string/camera"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_fields"
                android:id="@+id/btn_gallery_ayah"
                android:text="@string/gallery"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/nama_ibu"
            android:id="@+id/tv_ibu"/>
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/nama_ibu"
            android:id="@+id/edt_nama_ibu"
            android:inputType="text" />
        <TextView
            style="@style/tv_fields"
            android:text="@string/nik_ibu"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_nik_ibu" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/_317xxxxxxx"
            android:id="@+id/edt_nik_ibu"
            android:inputType="number" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/foto_ktp_ibu" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/img_ktp_ibu"
            android:src="@drawable/ic_image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_fields"
                android:id="@+id/btn_camera_ibu"
                android:text="@string/camera"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_fields"
                android:id="@+id/btn_gallery_ibu"
                android:text="@string/gallery"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            style="@style/tv_fields"
            android:text="@string/nomor_kontak"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_kontak" />

        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/_081xxxxxxxx"
            android:id="@+id/edt_kontak"
            android:inputType="number" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_continue"
            android:text="@string/lanjutkan"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            style="@style/btn_continue" />
    </LinearLayout>

</ScrollView>