<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".view.death.DeathActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            style="@style/tv_fields"
            android:text="@string/nama_jenazah"
            android:id="@+id/tv_jenazah" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/nama_jenazah"
            android:id="@+id/edt_nama_jenazah"
            android:inputType="text" />
        <TextView
            style="@style/tv_fields"
            android:text="@string/jenis_kelamin"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_jenis_kelamin" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_gender" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/kota_lahir" />
        <EditText
            style="@style/edt_fields"
            android:id="@+id/edt_kota_lahir"
            android:hint="@string/kota_lahir_provinsi"
            android:background="@drawable/custom_edit_text"
            android:inputType="text" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/tanggal_lahir" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_tanggal_lahir"
            android:inputType="date"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/dd_mm_yyyy"/>
        <TextView
            android:layout_marginTop="5dp"
            style="@style/tv_fields"
            android:text="@string/agama" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_religion" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/pekerjaan" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_pekerjaan"
            android:inputType="text"
            android:hint="@string/pekerjaan" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/dusun" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_dusun" />
        <TextView
            style="@style/tv_fields"
            android:text="@string/rt"
            android:layout_marginTop="5dp" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/rt"
            android:id="@+id/edt_rt"
            android:inputType="number" />
        <TextView
            style="@style/tv_fields"
            android:text="@string/rw"
            android:layout_marginTop="5dp" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/rw"
            android:id="@+id/edt_rw"
            android:inputType="number" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/tanggal_meninggal" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_tanggal_meninggal"
            android:inputType="date"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/dd_mm_yyyy"/>
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/waktu_meninggal" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_waktu_meninggal"
            android:inputType="time"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/hh_mm"/>
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/tempat_meninggal" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_tempat_meninggal"
            android:inputType="text"
            android:hint="@string/tempat_meninggal" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/sebab_meninggal" />
        <EditText
            style="@style/edt_fields"
            android:background="@drawable/custom_edit_text"
            android:id="@+id/edt_sebab_meninggal"
            android:inputType="text"
            android:hint="@string/sebab_meninggal" />
        <TextView
            style="@style/tv_fields"
            android:layout_marginTop="5dp"
            android:text="@string/foto_surat_keterangan_kematian" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/img_suket_kematian"
            android:src="@drawable/ic_image" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_fields"
                android:id="@+id/btn_camera_suket_kematian"
                android:text="@string/camera"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn_fields"
                android:id="@+id/btn_gallery_suket_kematian"
                android:text="@string/gallery"
                android:background="@drawable/rounded_button"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_continue"
            android:text="@string/submit"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            style="@style/btn_continue" />
    </LinearLayout>
</ScrollView>